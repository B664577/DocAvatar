{
  "name": "markdown-mindmap-viewer",
  "version": "1.0.0",
  "description": "将Markdown转换为交互式思维导图，支持逐字展示和语音朗读",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "echo 'No build step required for this project'",
    "install-sapi": "npm install node-sapi",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "d3": "^7.9.0",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "markmap-lib": "^0.18.11",
    "markmap-view": "^0.18.10",
    "multer": "^2.0.2",
    "open": "^8.4.2",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.54",
    "puppeteer": "^24.15.0",
    "recordrtc": "^5.6.2",
    "say": "^0.16.0",
    "socket.io": "^4.7.5"
  },
  "author": "",
  "license": "MIT"
}
